<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class catalog="calendar" name="com.sims.v2.model.Calendar" table="calendar">
        <composite-id>
            <key-many-to-one class="com.sims.v2.model.Classes" name="classes" column="classes_id" lazy="false" />
            <key-many-to-one class="com.sims.v2.model.Subject" name="subject" column="subject_id" lazy="false" />
        </composite-id>
        <property name="room" type="string">
            <column length="20" name="room"/>
        </property>
        <set inverse="true" name="attendances" cascade="all">
            <key>
                <column length="11" name="classes_id" not-null="true"/>
                <column length="11" name="subject_id" not-null="true"/>
            </key>
            <one-to-many class="com.sims.v2.model.Attendance"/>
        </set>
    </class>
</hibernate-mapping>